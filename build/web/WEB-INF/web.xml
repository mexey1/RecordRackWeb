<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>submit</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.DataSubmissionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>email_verification</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.EmailVerificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>store_registration</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.StoreRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>exception</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.ExceptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sync_with_client</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.SynchronizeWithClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>download_to_client</servlet-name>
        <servlet-class>com.geckosolutions.recordrack.servlets.DownloadToClient</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>submit</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>email_verification</servlet-name>
        <url-pattern>/email_verification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>store_registration</servlet-name>
        <url-pattern>/store_registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>exception</servlet-name>
        <url-pattern>/exception</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sync_with_client</servlet-name>
        <url-pattern>/sync_with_client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download_to_client</servlet-name>
        <url-pattern>/download_to_client</url-pattern>
    </servlet-mapping>
</web-app>
